<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent" >
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="#000000"
        android:gravity="bottom" >
	    <TextView
	        android:id="@+id/current_range"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_alignParentTop="true"
	        android:layout_centerHorizontal="true"
	        android:padding="5dp" />
	    <TextView android:id="@+id/minimum_range"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_below="@id/current_range"
	        android:layout_alignParentLeft="true"
	        android:padding="5dp" />
	    <TextView android:id="@+id/maximum_range"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_below="@id/current_range"
	        android:layout_alignParentRight="true"
	        android:padding="5dp" />
	    <SeekBar android:id="@+id/range_setter_bar"
	        android:layout_width="fill_parent"
	        android:layout_height="wrap_content"
	        android:layout_below="@id/current_range"
	        android:layout_toRightOf="@id/minimum_range"
	        android:layout_toLeftOf="@id/maximum_range"
	        android:padding="5dp" />

	    <Button
	        android:id="@+id/dismiss_range_setter_button"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_below="@id/range_setter_bar"
	        android:layout_centerHorizontal="true"
	        android:text="Done" />
	  </RelativeLayout>
</RelativeLayout>